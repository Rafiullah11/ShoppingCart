@model SmallCartViewModel

@if(Model != null)
{
    <p>Item in Cart : <span class="badge badge-primary">@Model.NumberOfItem</span></p>
    <p>Total Amount :<b>@Model.TotalAmount.ToString("C2")</b></p>
    <a class="btn btn-primary mb-2" asp-controller="Cart" asp-action="Index">View Cart</a>
    <br />
    <a class="btn btn-danger" asp-controller="Cart" asp-action="Index">Clear Cart</a>

}
else
{
    <p class="lead m-0">Your Cart is empty..</p>
}