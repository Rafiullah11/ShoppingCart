@model ShoppingCart.Models.Page

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row mb-2 ml-2">
            <h2 class="text-primary">Add New Page</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="form-control">

                </textarea>
            @*<input asp-for="Content" class="form-control" />*@
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

         <div class="mb-3">
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>

        <a asp-action="Index" asp-controller="Page" class="btn btn-secondary" style="width:150px">Back</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        CKEDITER.replace("Content");
    </script>
}
