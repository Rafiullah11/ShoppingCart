@model ShoppingCart.Models.Page

@{
    ViewData["Title"] = "Delete";
}

<div class="row border">
   
    <div class="col-md-12">
         <h3 class="text-danger">Are you sure you want to delete <strong>"@Model.Title"</strong>?</h3>
    <br />
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" disabled class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" disabled class="form-control">

                </textarea>
            </div>

        </form>
       <div class="pb-2">
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn-outline-success">Back to List</a>
            </form>
       </div>
    </div>
  
</div>

