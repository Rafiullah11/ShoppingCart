@model ShoppingCart.Models.Page

<form asp-action="Create">
    <div class="container border pt-3">
        <div class="form-group row pl-3">
            <h3 class="text-primary">Add New Page</h3>
        </div>
        <div class="row">
            <div class="col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control">

                </textarea>
                    @*<input asp-for="Content" class="form-control" />*@
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class=" col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" value="Create" class="btn btn-primary w-75" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        CKEDITER.replace("Content");
    </script>
}
