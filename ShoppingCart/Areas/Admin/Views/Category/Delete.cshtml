@model ShoppingCart.Models.Category

@{
    ViewData["Title"] = "Delete";
}


<div class="row border">

    <div class="col-md-12">
        <h3 class="text-danger">Are you sure you want to delete <strong>"@Model.Name"</strong>?</h3>
        <br />
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Sorting" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </form>
        <div class="pb-2">
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn-outline-success">Back to List</a>
            </form>
        </div>
    </div>

</div>
