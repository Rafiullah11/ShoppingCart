@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role";
}

<h1>User Roles</h1>
<div class="container border pt-1">
    <div class="row">
        <div class="col-md-6">

            <h2 class="text-primary">Role List</h2>

        </div>
        <div class="col-md-6 text-right">

            <a asp-action="Create" class="btn btn-primary">Create New Role</a>

        </div>
    </div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Roles</th>
            <th>Users</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td> 
            <td user-role=@item.Id></td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>